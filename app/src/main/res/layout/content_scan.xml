<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">

    <!-- Needed to be able to access this layout from app_bar_scan's data binding-->
    <data>

        <variable
                name="foo"
                type="int"/>
    </data>

    <LinearLayout
            android:id="@+id/top_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"
            tools:showIn="@layout/app_bar_scan"
            tools:context=".BarcodeScanActivity">

        <com.itrided.android.barracoda.ui.camera.CameraSourcePreview
                android:id="@+id/preview"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_margin="@dimen/activity_vertical_margin"
                android:layout_weight="9">

            <com.itrided.android.barracoda.ui.camera.GraphicOverlay
                    android:id="@+id/graphicOverlay"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>

        </com.itrided.android.barracoda.ui.camera.CameraSourcePreview>
    </LinearLayout>
</layout>
