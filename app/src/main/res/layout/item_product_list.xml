<?xml version="1.0" encoding="utf-8"?>
<layout
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:android="http://schemas.android.com/apk/res/android">

    <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="5dp"
            app:cardElevation="3dp"
            app:cardUseCompatPadding="true">

        <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <ImageView
                    android:id="@+id/image"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:background="@color/colorPrimaryDark"
                    android:scaleType="centerInside"
                    android:adjustViewBounds="true"
                    app:layout_constraintDimensionRatio="H,16:9"
                    app:layout_constraintEnd_toStartOf="@id/vertical_guide"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/ic_cake"/>

            <android.support.constraint.Guideline
                    android:id="@+id/vertical_guide"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintGuide_percent="0.5"/>

            <TextView
                    android:id="@+id/name_tv"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:paddingBottom="8dp"
                    android:textAppearance="@style/AppTheme.ProductLabel"
                    android:ellipsize="end"
                    android:maxLines="2"
                    app:layout_constraintTop_toTopOf="@id/image"
                    app:layout_constraintLeft_toRightOf="@id/vertical_guide"
                    app:layout_constraintStart_toStartOf="@+id/vertical_guide"
                    app:layout_constraintEnd_toEndOf="parent"
                    tools:text="@tools:sample/lorem"/>

            <TextView
                    android:id="@+id/price_tv"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:textAppearance="@style/AppTheme.BodyText"
                    app:layout_constraintTop_toBottomOf="@id/name_tv"
                    app:layout_constraintLeft_toRightOf="@id/vertical_guide"
                    app:layout_constraintStart_toStartOf="@+id/vertical_guide"
                    app:layout_constraintEnd_toEndOf="parent"
                    tools:text="@tools:sample/lorem"/>

            <TextView
                    android:id="@+id/store_tv"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:textAppearance="@style/AppTheme.BodyText"
                    app:layout_constraintTop_toBottomOf="@id/price_tv"
                    app:layout_constraintLeft_toRightOf="@id/vertical_guide"
                    app:layout_constraintStart_toStartOf="@+id/vertical_guide"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:text="No linked stores"                    />
        </android.support.constraint.ConstraintLayout>
    </android.support.v7.widget.CardView>
</layout>